@charset "UTF-8";
/* 重置样式 */

/* 重置默认边距 */
body, p, ul, ol, dl, li, dd, h1, h2, h3, h4, input, form {
	margin: 0;
	padding: 0;
}

* {
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
/* 清楚列表默认样式 */
li {
	list-style: none;
}

/* 统一界面的字体 */
body {
	font: 12px/1.5 'Microsoft yahei';
	color: #333; /* 规定统一字体颜色 */
}

/* 字体重置 */
a {
	text-decoration: none;
	color: inherit;
}

h1, h2, h3, h4, h5, h6, b, strong {
	font-weight: normal;
	font-size: 100%;
}

i, em {
	font-style: normal;
}

/* 表单元素 */
input {
	outline: none; /* 选中的时候会有一个蓝色的边框，选中的时候没有这个边框 */
	border: 0;
	background-color: transparent;
}

/* img重置 */
img {
	vertical-align: top;
	border: none;
}

/* 通用样式 */
/* 浮动 S */
.fl, .fl_child>* {
	float: left;
}

.fr, .fr_child>* {
	float: right;
}

.fr_child::after, .fl_child::after, .clearFix::after {
	content: "";
	display: block;
	width: 0;
	height: 0;
	clear: both;
}

.fr_child, .fl_child, .clearFix {
	*zoom: 1;
}

/* 定位 */
.p-relative, .p-relative {
	position: relative;
}

.p-absolute {
	position: absolute;
}
/* 块级特性 */
.d-block {
	display: block;
}

.d-none {
	display: none;
}
/* 文本处理 */
.t_ellipsis {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.t_center {
	text-align: center;
}
/* 图片处理 */
.img_cover img {
	width: 100%;
	height: 100%;
}
/*辅助*/
.bd {
	border: 1px solid red;
}

.red {
	background-color: red;
}

.blue {
	background-color: blue;
}

.green {
	background-color: green;
}

.black {
	background-color: black;
}

.pink {
	background-color: pink;
}